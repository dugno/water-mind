{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "water_mind",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart"
        },
        {
            "name": "water_mind (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile",
            "program": "lib/main.dart"
        },
        {
            "name": "water_mind (release mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release",
            "program": "lib/main.dart"
        },
        {
            "name": "water_mind (Android)",
            "request": "launch",
            "type": "dart",
            "deviceId": "android",
            "program": "lib/main.dart"
        },
        {
            "name": "water_mind (iOS)",
            "request": "launch",
            "type": "dart",
            "deviceId": "iphone",
            "program": "lib/main.dart"
        },
        {
            "name": "water_mind (with DevTools)",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "toolArgs": [
                "--dart-define=ENABLE_DEVTOOLS=true"
            ]
        },
        {
            "name": "Generate code & run",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "preLaunchTask": "flutter_build_runner"
        },
        {
            "name": "Run all tests",
            "request": "launch",
            "type": "dart",
            "program": "./test/"
        }
    ]
}